{
    "name": "limingxinleo/hyperf-utils",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "Utils for Hyperf.",
    "autoload": {
        "psr-4": {
            "Han\\Utils\\": "src/"
        },
        "files": [
            "src/Functions.php",
            "src/Reflection/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=7.3",
        "hyperf/utils": "^2.1",
        "nesbot/carbon": "^2.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "elasticsearch/elasticsearch": "^7.8",
        "friendsofphp/php-cs-fixer": "^2.14",
        "hyperf/config": "^2.1",
        "hyperf/database": "^2.1",
        "hyperf/framework": "^2.1",
        "hyperf/guzzle": "^2.1",
        "hyperf/logger": "^2.1",
        "hyperf/testing": "^2.1",
        "mockery/mockery": "^1.3",
        "phpstan/phpstan": "^0.12",
        "swoole/ide-helper": "dev-master"
    },
    "suggest": {
        "elasticsearch/elasticsearch" : "Required to use ElasticSearch. (^7.0)",
        "hyperf/guzzle": "Required to use ElasticSearch. (^2.1)",
        "hyperf/framework": "Required to use ElasticSearch. (^2.1)",
        "hyperf/logger": "Required to use DebugMiddleware. (^2.1)",
        "hyperf/http-server": "Required to use DebugMiddleware. (^2.1)"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0-dev"
        },
        "hyperf": {
            "config": "Han\\Utils\\ConfigProvider"
        }
    }
}
