{
    "name": "limingxinleo/hyperf-utils",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf"
    ],
    "description": "Utils for hyperf.",
    "autoload": {
        "psr-4": {
            "HyperfX\\Utils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.4",
        "hyperf/logger": "2.0.*",
        "hyperf/utils": "2.0.*",
        "nesbot/carbon": "^2.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "hyperf/database": "2.0.*",
        "hyperf/testing": "2.0.*",
        "mockery/mockery": "^1.3",
        "phpstan/phpstan": "^0.12",
        "swoole/ide-helper": "dev-master"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1-dev"
        },
        "hyperf": {
            "config": "HyperfX\\Utils\\ConfigProvider"
        }
    }
}
